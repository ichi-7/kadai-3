<h2>User info</h2>
<%= form_with model: @user do |f| %>
  <label for="inputName">Name</label><br>
  <%= f.text_field :name, autofocus: true %><br>
  <label for="inputImage">Image</label><br>
  <%= f.file_field :profile_image, accept: "image/" %><br>
  <label for="inputIntro">Introduction</label><br>
  <%= f.text_field :introduction %><br>
  <%= f.submit "Update User" %>
<% end %>