<h2>New book</h2>
  <%= form_with model: @book do |f| %>
    <div class="form-group">
      <label>Title</label> <br>
        <%= f.text_field :title %>
    </div>
    <div class="form-group">
      <label>Opinion</label> <br>
        <%= f.text_field :body %>
    </div>
    <%= f.submit 'Create Book' %>
  <% end %>