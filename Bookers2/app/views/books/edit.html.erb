<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1 class="mt-3">Editing Book</h2>
      
      <div>
        <% if @book.errors.any? %>
          <h3 class="mt-3"><%= @book.errors.count %>errors prohibited this obj from being saved:</h2>
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
      </div>
      
      <%= form_with model: @book do |f| %>
        <div class="form-group">
          <label for="inputTitle">Title</label><br>
          <%= f.text_field :title, autofocus: true, class: 'form-control book_title' %>
        </div>
        <div class="form-group">
          <label for="inputBody">Opinion</label><br>
          <%= f.text_field :body, class: 'form-control book_body' %>
        </div>
        <div class="form-group">
          <%= f.submit "Update Book", class: 'btn btn-success' %>
        </div>
      <% end %>
      <%= link_to "Show", book_path(@book) %> | <%= link_to "Back", books_path %>
    </div>
  </div>
</div>