<div class="container">
  <div class="row">
    <div class="col-md-3">    
      <%= render '/homes/info-user-show.html.erb', book_new: @book_new %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2 class="mt-3">Books</h2>
      <table class="table table-hover table-inverse">
        <tr>
          <th width=110px></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
        <% @books.each do |book| %>
          <tr>
            <td><a href="<%= user_path(@user) %>"><%= image_tag @user.get_profile_image(80,80) %></a></td>
            <td><%= link_to book.title, book_path(book) %></td>
            <td><%= book.body%></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>