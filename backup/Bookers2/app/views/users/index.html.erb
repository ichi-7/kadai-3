<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render '/homes/info.html.erb', book_new: @book_new %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2 class="mt-3">Users</h2>
      <table class="table table-hover table-inverse">
        <tr>
          <th width=250px>image</th>
          <th>name</th>
          <th></th>
        </tr>
        <% @users.each do |user| %>
        <tr>
          <td><%= image_tag user.get_profile_image(80,80) %></td>
          <td><%= user.name %></td>
          <td><%= link_to "show", user_path(user) %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>