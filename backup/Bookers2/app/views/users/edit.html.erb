<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2 class="mt-3">User info</h2>
      <%= form_with model: @user do |f| %>
        <div class="form-group">
          <label for="inputName">Name</label><br>
          <%= f.text_field :name, autofocus: true, class: 'form-control name' %>
        </div>
        <div class="form-group">
          <label for="inputImage">Image</label><br>
          <%= f.file_field :profile_image, accept: "image/", class: 'form-control-file user_image' %>
        </div>
        <div class="form-group">
          <label for="inputIntro">Introduction</label><br>
          <%= f.text_field :introduction, class: 'form-control introduction' %>
        </div>
        <div class="form-group">
          <%= f.submit "Update User", class: 'btn btn-secondary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>